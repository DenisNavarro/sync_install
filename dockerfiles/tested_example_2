FROM docker.io/library/rust:1.86.0-slim-bookworm

RUN set -eux; \
    cargo install cargo-cache --version 0.8.3; \
    # cargo install fsays --version 0.3.0 --locked; \
    cargo install pixi --git https://github.com/prefix-dev/pixi.git --tag v0.44.0 --locked; \
    cargo cache -r all

WORKDIR /work
COPY pixi.toml pixi.lock /work/

RUN set -eux; \
    pixi run -e openssl-pkgconfig cargo install cargo-update --version 16.3.0 --locked; \
    cargo cache -r all

RUN set -eux; \
    pixi global install git=2.49.0; \
    pixi global list

ENV HOME="/root"
ENV PATH="$PATH:$HOME/.pixi/bin"

RUN set -eux; \
    git config set --global init.defaultBranch main; \
    git config set --global user.name 'John Smith'; \
    cat "$HOME/.gitconfig"

CMD ["/bin/bash"]
